{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "noEmit": true,
    "types": ["jest", "@testing-library/jest-dom"],
    "paths": {
      "@/*": ["src/*"],
    }
  },
  "include": [
    "src",
    "src/**/*.ts",
    "src/**/*.tsx",
  ],
  "exclude": ["node_modules", "dist"]
}